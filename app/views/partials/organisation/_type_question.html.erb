<div class="govuk-form-group <%= "govuk-form-group--error" if model_object.errors.any? %>">

  <fieldset class="govuk-fieldset">

    <legend class="govuk-fieldset__legend govuk-fieldset__legend--xl govuk-!-margin-bottom-4">
      <h1 class="govuk-fieldset__heading">
        <%= t('organisation.type.page_heading') %>
      </h1>
    </legend>

    <%=
      render(
        partial: "partials/form_group_errors",
        locals: { form_object: model_object }
      ) if model_object.errors.any?
    %>

    <div class="govuk-radios govuk-radios--conditional" data-module="govuk-radios">

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "registered_charity", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_registered_charity,
          t('organisation.type.labels.registered_charity'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "local_authority", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_local_authority,
          t('organisation.type.labels.local_authority'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "other_public_sector_organisation", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_other_public_sector_organisation,
          t('organisation.type.labels.other_public_sector_organisation'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "public_or_private_company", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_public_or_private_companyy,
          t('organisation.type.labels.public_or_private_company'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "community_interest_company", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_community_interest_company,
          t('organisation.type.labels.community_interest_company'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "charitable_incorporated_organisation", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_charitable_incorporated_organisation,
          t('organisation.type.labels.charitable_incorporated_organisation'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "partnership_or_llp", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_partnership_or_llp,
          t('organisation.type.labels.partnership_or_llp'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "private_owner_of_heritage", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_private_owner_of_heritage,
          t('organisation.type.labels.private_owner_of_heritage'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "cooperative_industrial_provident_registered_society", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_cooperative_industrial_provident_registered_society,
          t('organisation.type.labels.cooperative_industrial_provident_registered_society'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "trust", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_trust,
          t('organisation.type.labels.trust'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

         <div class="govuk-radios__item">
        <%= form_object.radio_button :org_type, "other_constituted_unincorporated_club_or_society", class: "govuk-radios__input" %>
        <%=
          form_object.label :org_type_other_constituted_unincorporated_club_or_society,
          t('organisation.type.labels.other_constituted_unincorporated_club_or_society'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>
      
      <div class="govuk-checkboxes__divider">or</div>

      <div class="govuk-radios__item">
        <%=
          form_object.radio_button :org_type,
          "other",
          class: "govuk-radios__input",
          "data-aria-controls" => "conditional-organisation_org_type_none_of_the_above"
        %>
        <%=
          form_object.label :org_type_none_of_the_above,
          t('organisation.type.labels.none_of_the_above'),
          class: "govuk-label govuk-radios__label"
        %>
      </div>

      <div class="govuk-radios__conditional govuk-radios__conditional--hidden"
        id="conditional-organisation_org_type_none_of_the_above">

        <p class="govuk-body">
          <%= t('organisation.type.describe_type') %>
        </p>

        <%= 
          form_object.text_field :custom_org_type,
          class:"govuk-input #{'govuk-input--error' if
            @organisation.errors[:custom_org_type].any?}",
          "autocomplete" => "organisation type",
          "spellcheck" => "false"
        %>

      </div>

    </div>

  </fieldset>

</div>
